#include <../include/ft_ls.h>

void	ft_tri_swap(t_elem *save, t_elem *elem)
{
	t_elem *bef;
	t_elem *nxt;

	if (save == elem)
	{
		bef = save->next;
		save->next = save->next->next;
		nxt->next = save;
		elem = nxt;
	}
	else
	{
		bef = elem;
		nxt = save->next;
		while (bef->next != save)
			bef = bef->next;
		bef->next = nxt;
		save->next = nxt->next;
		nxt->next = save;
	}
}
